<div class="cardGas">
    <img src="../imagens/botijãoDeGas.png">
    <h4 class="mt-4">Gás de cozinha</h4>
    <p class="mt-4"> Compre o seu gás no valor de R$...</p>
    <button class="btn btn-dark col-10 mt-3 mb-4" data-toggle="modal" data-target="#exampleModal1">COMPRAR</button>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Solicite seu gás</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="">
                    <div>
                        <h6>Escolha a quantidade desejada</h6>
                        <input type="number">

                    </div>
                    <br>
                    <div name="tipoDePagamentoNaEntrega">
                        <h6>Escolha a sua forma de pagamento na entrega</h6>
                        <input type="radio" name="dinheiro" value="dinheiro"> Dinheiro
                        <input type="radio" name="cartao" value="cartao"> cartao
                    </div>
                    <br>
                    <div>
                        <h6>Valor total</h6>
                        <h7>R$<h7 name="valorTotal"> </h7>
                        </h7>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>