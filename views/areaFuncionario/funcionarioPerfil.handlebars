<section>
    <div class="secao-home-cliente">
        <div class="row">
            <div id="funcoesfuncioanrio" class="col-2">
                {{> funcionarioAcessos}}
            </div>
            <div class="col-9 secao-home-cliente-row-div-central">
                <div class="col-12 secao-home-cliente-row-div-central">
                    <form method="post" action="/dashboard/atualizaFuncionarioPerfilPost">
                        <div class="form-row">
                            <div>
                                <h2>Perfil</h2>
                            </div>
                            <input hidden type="text" value="{{funcionario.id}}">
                            <div class="col-md-12 mb-12">
                                <label>Nome completo</label>
                                <input type="text" name="nome" value="{{funcionario.nome}}" class="form-control"
                                    placeholder="nome" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>cpf</label>
                                <input type="text" name="cpf" class="form-control" value="{{funcionario.cpf}}"
                                    placeholder="sobrenome" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Data de Nascimento</label>

                                <input type="date" name="dataDeNascimento" id="dataDeNascimento" class="form-control"
                                    value="{{funcionario.dataDeNascimento}}" placeholder="sobrenome" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Email</label>
                                <input type="email" name="email" id="email" value="{{funcionario.email}}"
                                    class="form-control" placeholder="Email" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label>Senha</label>
                                <input type="password" name="senha" class="form-control" value="{{funcionario.senha}}"
                                    placeholder="Senha" required>
                            </div>

                            <div class="form-group col-md-12 mb-12">
                                <label>Endere√ßo</label>
                                <input name="endereco" class="form-control" type="text" id="cep" placeholder="CEP"
                                    value="{{funcionario.endereco}}" required />
                            </div>
                            <input type="submit" value="Editar">

                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>