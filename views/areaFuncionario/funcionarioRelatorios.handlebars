<div class="col-md-12 col-lg-10 secao-home-cliente-row-div-central">
    <div class="container">
        <h2>Relatórios</h2>
        <p><strong>Note:</strong> The <strong>data-parent</strong> attribute makes sure that all collapsible elements
            under the specified parent will be closed when one of the collapsible item is shown.</p>
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1"
                            style="color: #000;">Relatório do Mês</a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse in">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Data</th>
                                <th>Quantidade de Produtos Inseridos</th>
                                <th>Quantidade de Produtos Venditos</th>
                                <th>Valor Total das Vendas</th>
                                <th>Valor Total das Compras</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each estoquesCadastradosMensalmente}}
                            <tr>
                                <td>{{{formatDate this.createdAt}}}</td>
                                <td>{{{this.quantidadeInserida}}}</td>
                                <td>{{{this.quantidadeVendida}}}</td>
                                <td>{{{valorGas this.quantidadeVendida}}}</td>
                                <td>{{{valorCompra this.quantidadeInserida this.valorDoProduto}}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2"
                            style="color: #000;">Relatório do Ano</a>
                    </h4>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>Data</th>
                                <th>Quantidade de Produtos Inseridos</th>
                                <th>Quantidade de Produtos Venditos</th>
                                <th>Valor Total das Vendas</th>
                                <th>Valor Total das Compras</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each estoquesCadastradosAnual}}
                            <tr>
                                <td>{{{formatDate this.createdAt}}}</td>
                                <td>{{{this.quantidadeInserida}}}</td>
                                <td>{{{this.quantidadeVendida}}}</td>
                                <td>{{{valorGas this.quantidadeVendida}}}</td>
                                <td>{{{valorCompra this.quantidadeInserida this.valorDoProduto}}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>