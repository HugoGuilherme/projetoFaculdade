<div class="col-md-12 col-lg-10 secao-home-cliente-row-div-central">
  <form method="post" action="/dashboard/updateCompra">
    <input hidden type="text" name="id" value="{{this.estoque.id}}" />
    <div class="form-group">
      <label for="nomeDoProduto" class="marg10">Nome do Produto</label>
      <input type="text" class="form-control" id="nomeDoProduto" name="nomeDoProduto"
        value="{{estoque.nomeDoProduto}}" />
    </div>
    <div class="form-group">
      <label for="valorDoProduto" class="marg10">Valor do Produto</label>
      <input type="text" class="form-control" id="valorDoProduto" name="valorDoProduto"
        value="{{estoque.valorDoProduto}}" />
    </div>
    <div class="form-group">
      <label for="quantidade" class="marg10">Quantidade Inserida</label>
      <input type="number" class="form-control" id="quantidade" name="quantidade"
        value="{{estoque.quantidadeInserida}}" />
    </div>

    <button type="submit" class="btn btn-primary">Atualizar</button>
  </form>
</div>