<div class="row">
    <div class="col-2">
        {{> funcionarioAcessos}}
    </div>
    <div class="col-9 secao-home-cliente-row-div-central">
        
        <form class="form" action="/funcionario/updateCliente" method="POST">
        <h2>Formulario cliente {{pessoa.id}}</h2>
            <div class="form-row">
                <input type="hidden" name="id" value="{{pessoa.id}}">
                <div class="col-md-6 mb-3">
                    <label>Nome</label>
                    <input type="text" class="form-control" name="nome" placeholder="nome" value="{{pessoa.nome}}" required>
                </div>
                <div class="form-group col-md-6">
                    <label>Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Email" value="{{pessoa.email}}" required>
                </div>
                <div class="form-group col-md-6">
                    <label>Senha</label>
                    <input type="text" class="form-control" name="senha" placeholder="Senha" value="{{pessoa.senha}}" required>
                </div>
                <div class="form-group col-md-6">
                    <label>Endereço</label>
                    <input type="text" class="form-control" name="endereco" placeholder="Endereço" value="{{pessoa.endereco}}" required>
                </div>
                <input type="submit" value="Editar">
        </form>
    </div>
</div>