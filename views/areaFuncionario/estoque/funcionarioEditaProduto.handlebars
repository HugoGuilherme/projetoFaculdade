<div class="col-md-12 col-lg-10 secao-home-cliente-row-div-central">
  <form method="post" action="/dashboard/updateEstoque">
    <input hidden type="text" name="id" value="{{this.estoque.id}}" />
    <div class="form-group">
      <label for="nomeDoProduto">Nome do produto</label>
      <input
        type="text"
        class="form-control"
        id="nomeDoProduto"
        name="nomeDoProduto"
        value="{{estoque.nomeDoProduto}}"
      />
    </div>
    <div class="form-group">
      <label for="valorDoProduto">Valor do produto</label>
      <input
        type="text"
        class="form-control"
        id="valorDoProduto"
        name="valorDoProduto"
        value="{{estoque.valorDoProduto}}"
      />
    </div>
    <div class="form-group">
      <label for="quantidade">Quantidade inserida</label>
      <input
        type="number"
        class="form-control"
        id="quantidade"
        name="quantidade"
        value="{{estoque.quantidadeInserida}}"
      />
    </div>

    <button type="submit" class="btn btn-primary">atualizar</button>
  </form>
</div>