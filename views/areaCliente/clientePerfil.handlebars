<section>
    <div class="secao-home-cliente">
        <div class="row">
            <div class="col-2">
                {{> clienteAcessos}}
            </div>
            <div class="col-9 secao-home-cliente-row-div-central">
                <form method="post" action="/cliente/updateCliente">
                    <div class="form-row">
                        <div>
                            <h2>Perfil</h2>
                        </div>
                        <input hidden type="text" value="{{cliente.id}}"></inpu>
                        <div class="col-md-12 mb-12">
                            <label>Nome completo</label>
                            <input type="text" name="nome" value="{{cliente.nome}}" class="form-control"
                                placeholder="nome" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>cpf</label>
                            <input type="text" name="cpf" class="form-control" value="{{cliente.cpf}}"
                                placeholder="sobrenome" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Data de Nascimento</label>

                            <input type="date" name="dataDeNascimento" id="dataDeNascimento" class="form-control"
                                value="{{cliente.dataDeNascimento}}" placeholder="sobrenome" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Email</label>
                            <input type="email" name="email" id="email" value="{{cliente.email}}" class="form-control"
                                placeholder="Email" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Senha</label>
                            <input type="password" name="senha" class="form-control" value="{{cliente.senha}}"
                                placeholder="Senha" required>
                        </div>

                        <div class="form-group col-md-12 mb-12">
                            <label>Endere√ßo</label>
                            <input name="endereco" class="form-control" type="text" id="cep" placeholder="CEP"
                                value="{{cliente.endereco}}" required />
                        </div>
                        <input type="submit" value="Editar">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>